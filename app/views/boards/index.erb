<div class="container">
  <% if flash[:message] != nil %>
    <p class="p-3 mb-2 bg-secondary text-white"><%= flash[:message] %></p>
  <% end %>
  <div class="container">
    <h2>Message Boards</h2>
    <% @boards.each do |board| %>
      <a class="btn btn-outline-secondary" href="/boards/<%= board.id %>"><%= board.topic %></a>
    <% end %>
  </div>
</div>
